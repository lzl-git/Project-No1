<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo" xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://code.alibabatech.com/schema/dubbo
       http://code.alibabatech.com/schema/dubbo/dubbo.xsd http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd">
    <!--监听注册中心-->

    <!--三大容器      配置需要的-->

    <!--处理器映射器、适配器-->
    <mvc:annotation-driven/>

    <!--配置应用名称-->
    <dubbo:application name="dubbo-web" />

    <!--配置注册中心地址-->
    <dubbo:registry address="zookeeper://192.168.75.128:2181"/>

    <!--发现服务-->
    <dubbo:annotation package="cn.itcast.core.controller"/>



</beans>